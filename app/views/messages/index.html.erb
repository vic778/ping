<p id="notice", style="color: green">
  <%= notice %>
</p>

<h1>
  Messages
  <spam id="message_counter">
    <%= Message.count%>
  </spam>
</h1>
<div id="new_message">
  <%= render partial: "messages/form", locals: {message: Message.new } %>
</div>

<div id="messages">
  <% @messages.each do |message| %>
    <%= render message %>
  <% end %>
</div>

<%= link_to "New message", new_message_path %>

